@model IEnumerable<JKEMVC.Models.Udstillingsmodel>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Udstillingsmodeller</h2>

<p>
    @if (User.IsInRole("admin"))
    {
        @Html.ActionLink("Opret", "Create")
    }
</p>

@if (User.IsInRole("admin"))
{
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.titel)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.beskrivelse)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.billedeSti)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.titel)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.beskrivelse)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.billedeSti)
                </td>
                <td>
                        @Html.ActionLink("Redigér", "Edit", new { id = item.ID }) |
                        @Html.ActionLink("Slet", "Delete", new { id = item.ID })
                </td>
            </tr>
        }
    </table>
}


<div class="container">
    <div class="row">
        <ul class="thumbnails list-unstyled">
            @foreach (var item in Model)
            {
                <li class="col-md-3">
                    <div class="thumbnail" style="padding: 0">
                        <div style="padding:4px">
                            <img src="@Html.DisplayFor(modelItem => item.billedeSti)" alt="300x250" style="width: 100%" />
                        </div>
                        <h2 class="text-center">@Html.DisplayFor(modelItem => item.titel)</h2>
                        <p class="text-center">@Html.DisplayFor(modelItem => item.beskrivelse)</p>
                    </div>
                </li>
            }
        </ul>
    </div>
</div>