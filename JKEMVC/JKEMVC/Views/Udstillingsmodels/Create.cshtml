@model JKEMVC.Models.Udstillingsmodel

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Opret</h2>


@using (Html.BeginForm("Create", "Udstillingsmodels", null, FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Udstillingsmodel</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <div class="control-label col-md-2">
                <p><b>Titel:</b></p>
            </div>
            <div class="col-md-10">
                @Html.EditorFor(model => model.titel, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.titel, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="control-label col-md-2">
                <p><b>Beskrivelse:</b></p>
            </div>
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.beskrivelse, 4, 40, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.beskrivelse, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="control-label col-md-2">
                <p><b>Billede:</b></p>
            </div>
            <div class="col-md-10">
                <input type="file" title="Vælg billede" accept="image/png, image/jpeg, image/gif" name="image" id="image"/>
                                                                               
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Opret" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Gå tilbage", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
