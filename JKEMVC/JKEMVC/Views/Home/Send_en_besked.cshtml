@model JKEMVC.Models.EmailFormModel
@{
    ViewBag.Title = "Contact";
}
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <h2>Send en besked</h2>
    <h6>Send gerne info om mål, til den ønskede vare og andre spørgsmål</h6>
    <hr />
    <div class="form-group">
        @Html.LabelFor(m => m.FromName, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.FromName, new { @class = "form-control", placeholder = "Fulde navn" })
            @Html.ValidationMessageFor(m => m.FromName)
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.FromTlf, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.FromTlf, new { @class = "form-control", placeholder = "Telefonnr" })
            @Html.ValidationMessageFor(m => m.FromTlf)
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.FromEmail, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.FromEmail, new { @class = "form-control", placeholder = "Email-adresse" })
            @Html.ValidationMessageFor(m => m.FromEmail)
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Message, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextAreaFor(m => m.Message, 10, 40, new { @class = "form-control", placeholder = "Skriv din besked her..." })
            @Html.ValidationMessageFor(m => m.Message)
        </div>
    </div>
    
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-lg btn-default" value="Send" />
        </div>
    </div>
}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}