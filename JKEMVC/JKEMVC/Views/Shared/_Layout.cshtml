<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>JKE Design Kolding</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <nav class="navbar navbar-default navbar-fixed-top navbar-static-top navbar-inverse">
        <div class="container-fluid">
            <!-- Brand and toggle get grouped for better mobile display -->
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a href="#">
                    <img src="~/Content/Images/15403175_10211082793687308_862816711_n.png" height="50"/>
                </a>
            </div>
            <!-- Collect the nav links, forms, and other content for toggling -->
            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                <ul class="nav navbar-nav">
                    <li class="@(ViewContext.RouteData.Values["Action"].ToString() == "Index" ? "active" : "")">@Html.ActionLink("Forside", "Index", "Home")</li>
                    <li class="@(ViewContext.RouteData.Values["Action"].ToString() == "Kontakt_information" ? "active" : "")">@Html.ActionLink("Kontaktinformation", "Kontakt_information", "Home")</li>
                    <li class="@(ViewContext.RouteData.Values["Action"].ToString() == "Info_om_os" ? "active" : "")">@Html.ActionLink("Info om os", "Info_om_os", "Home")</li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Produkter <span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            <li><a href="#">Køkken</a></li>
                            <li><a href="#">Bad</a></li>
                            <li><a href="#">Garderobe</a></li>
                        </ul>
                    </li>
                </ul>
                <form class="navbar-form navbar-left">
                    
                </form>
                <ul class="nav navbar-nav navbar-right">
                    <li class="@(ViewContext.RouteData.Values["Action"].ToString() == "Finansiering" ? "active" : "")">@Html.ActionLink("Finansiering", "Finansiering", "Home")</li>
                    <li class="@(ViewContext.RouteData.Values["Action"].ToString() == "Send_en_besked" ? "active" : "")">@Html.ActionLink("Send os en besked", "Send_en_besked", "Home")</li>
                    <li class="@(ViewContext.RouteData.Values["Action"].ToString() == "Links" ? "active" : "")">@Html.ActionLink("Vores samarbejdspartnere", "Links", "Home")</li>
                </ul>
            </div><!-- /.navbar-collapse -->
        </div><!-- /.container-fluid -->
    </nav>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; JKE Design Kolding - Postadresse: Albuen 9, 6000 Kolding - Telefon: 76322600 - Mail: jke-design@jke-kolding.dk - Åbningstider: Man-fredag: 10.00-17.00 Lørdag: 10.00-14.00</p>
        </footer>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
